<% layout('../layout') -%>
<% script('/javascripts/validateFieldMatch.js') -%>
<form id="frmPass" role="form"  style="max-width: 300px;">
<div class="form-group">
  <label for="email">New Password:</label>
  <input type="password" name="newPass" id="newPass" placeholder="New Password" class="form-control" pattern="^[A-Za-z0-9_-]{3,30}$" title="Your password must be 3 to 30 characters in length and may contain letters, numbers, hyphens, or underscores." required>
</div>
<div class="form-group">
  <label for="password">Re-type New Password:</label>
  <input type="password" name="newPass2" placeholder="RE-type new password" class="form-control" required oninput="validateMatch(this, 'newPass', 'The two passwords must match.')" pattern="^[A-Za-z0-9_-]{3,30}$" title="Your password must be 3 to 30 characters in length and may contain letters, numbers, hyphens, or underscores.">
</div>
<button type="submit" class="btn btn-default">Submit</button>
</form>
<script>
  $('#frmPass').submit(function(event){
    //prevent actual submit, but HTML5 validation triggers
    event.preventDefault();
    $.post( '/resetpass',{pass: $('#newPass').val(), id: "<%= id %>", token : "<%= token %>"})
      .fail(function(response) {
        $( ".alert" ).remove();
        var html = '<div class="alert alert-danger" role="alert">'+response.responseText+'</div>'
        $( html ).insertAfter( ".page-header" );
      })
      .done(function(response) {
      console.log(response);
        //redirect to login with message
        //window.location.replace("/login/Your password has been changed. Please log in with your new password./alert-success ")
        

      });

  });
</script>
