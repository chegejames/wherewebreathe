<% layout('layout') -%>
<% script('/javascripts/flot/jquery.flot.min.js'), script('/javascripts/flot/jquery.flot.categories.min.js') -%>
<% stylesheet -%>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= question %></h3>
  </div>
  <div class="panel-body"> 
    <form action="/answer" method="post" accept-charset="utf-8">
      <div class="form-group">
        <%if (type == "drop"){%>
        <select class="form-control" name="answer">
            <% for(var i=0; i<answers.length; i++) {%>
            <option value="<%= answers[i] %>"><%= answers[i] %></option>
            <% } %>
        </select>
        <% } 
        if (type == "text"){%>
          <label for="answer"><%= label %></label> 
          <input class="form-control" type="text" name="answer">
        <% } 
        if (type == "num"){%>
          <label for="answer"><%= label %></label> 
          <input class="form-control" type="text" name="answer">
        <% } 
        if (type == "radio"){%>
          <% for(var i=0; i<answers.length; i++) {%>
            <label class="radio">
              <input type="radio" name="answer" value="<%= answers[i] %>">
              <%= answers[i] %>
              <%if(answers[i] =="Other:"){%>
                <input type="text" name="othAns">
              <% } %>
            </label>
          <% } %>
        <% } %>        
        <input type="hidden" name="qid" value="<%= qid %>">
      </div>
      <div class="pull-right">
        <input  class="btn btn-primary" type="submit" value="Submit">
        <!--skip doesnt currently keep track of questions skipped-->
        <input class="btn btn-default" type="button" value="Skip" onclick="window.location.href ='./<%= qnum + 1%>';"> 
      </div>
    </form>
  </div>
</div>
