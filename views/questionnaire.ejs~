<% layout('layout') -%>
<% script('/javascripts/flot/jquery.flot.min.js'), script('/javascripts/flot/jquery.flot.categories.min.js') -%>
<% stylesheet -%>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= question %></h3>
  </div>
  <div class="panel-body"> 
    <form id="frmAns" accept-charset="utf-8">
      <div class="form-group">
        <%if (qType == "drop"){%>
        <select class="form-control" name="answer">
            <% for(var i=0; i<answers.length; i++) {%>
            <option value="<%= answers[i].text %>"><%= answers[i].text %></option>
            <% } %>
        </select>
        <% } 
        if (qType == "text"){%>
          <label for="answer"><%= label %></label> 
          <input class="form-control" type="text" name="answer">
        <% } 
        if (qType == "num"){%>
          <label for="answer"><%= label %></label> 
          <input class="form-control" type="text" name="answer">
        <% } 
        if (qType == "radio"){%>
          <% for(var i=0; i<answers.length; i++) {%>
            <label class="radio">
              <input type="radio" name="answer" value="<%= answers[i].text %>" 
               <% if (answers[i].nextQ){ %>
                data-nextq="<%= answers[i].nextQ %> "
                <% }%>
              >
              <%= answers[i].text %>
              
              <%if(answers[i].text =="Other:"){%>
                <input type="text" name="othAns">   
              <% } %>
            </label>
          <% } %>
        <% } %>      
        <input type="hidden" name="qid" value="<%= qid %>">
        <input type="hidden" name="nextq" value="<%= nextQ %>">
      </div>
      <div class="pull-right">
        <input  class="btn btn-primary" type="submit" value="Submit">
        <!--skip doesnt currently keep track of questions skipped-->
        <input class="btn btn-default" type="button" value="Skip" onclick="window.location.href ='/questionnaire/<%= nextQ%>';"> 
      </div>
    </form>
  </div>
</div>
  <script>
    //console.log("<%= qid %>");
    $('#frmAns').submit(function(event){
      //prevent actual submit, but HTML5 validation triggers
      event.preventDefault();
      //if the particular answer has a follow up question, set the follow up question as the next question
      if($('input[name=answer]:checked').data("nextq")){
        var nextQ = $('input[name=answer]:checked').data("nextq");      
      }
      //else get the questions defualt next question
      else{
        nextQ = <%= nextQ %>
      }
      $.post( '/answer',{qid: "<%= qid %>", nextq: nextQ, answer: $('input[name=answer]:checked').val()})
          .fail(function(response) {
          $( ".alert" ).remove();
          var html = '<div class="alert alert-danger" role="alert">'+response.responseText+'</div>'
          $( html ).insertAfter( ".page-header" );
        })
        .done(function(response) {
          //redirect to login with message
          console.log("success");
        });
    });
  </script>
