var mongoose = require('mongoose');
var Schema = mongoose.Schema;

var CatSchema = new Schema({
    name : String,
    weight : Number,
    breed : String
});

var catModel = mongoose.model( 'Cat', CatSchema );

catModel.aggregate([
        { $group: {
            _id: '$breed',
            weightAvg: { $avg: '$weight'}
        }}
    ], function (err, results) {
        if (err) {
            console.error(err);
        } else {
            console.log(results);
        }
    }
);

